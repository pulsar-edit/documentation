<!-- Used for the index of each section of the docs -->
<%-include("header")%>

  <body data-layout="summary">
    <%- include("page_header", { platform_switcher: true }) %>
    <div class="content">
      <%-
        include(
          "sidebar",
          {
            bar: root_sidebar,
            include_summary: false,
            indexTitle: "Summary",
            include_toc: true
          }
        )
      %>
      <main class="container">
        <section class="header">
          <h1 class="title" id="title"><%=title%></h1>
        </section>

        <%- content %>

        <%- include("list", { blocks: sidebar }) %>

      </main>
    </div>
    <%- include("hovercard") %>
  </body>

<%- include("footer") %>
