<!-- Pulsar API Documentation Page -->
<%- include("header", { title: content.customData?.name ?? title }) %>

<body>
  <%- include("page_header", { platform_switcher: false }) %>
  <div class="content">
    <%-
      include(
        "sidebar",
        {
          bar: sidebar,
          include_summary:
          true,
          indexTitle: `${locals.version} API Documentation`,
          include_toc: true
        }
      )
    -%>
    <main class="container">
      <section class="header">
        <% let pageTitle = (content.customData?.name ?? title) %>
        <h1 class="title" id="title"><%= pageTitle %></h1>
      </section>

      <section class="api-description">
        <header class="api-description__header">
          <h2 id="description">Description</h2>
        </header>
        <%- mdRender(content.description) %>
      </section>

      <% if (typeof content.examples !== "undefined") { %>
        <div class="api-entry" id="examples">
          <h5 class="api-entry__name">
            <a href="#examples">
              Examples
            </a>
          </h5>
          <div class="api-entry-summary">
            <% for (const example of content.examples) { %>
              <div class="api-example">
                <%- mdRender(example.description) %>
                <%- mdRender(example.raw) %>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>

      <%- file %>

    </main>
  </div>
  <%- include("hovercard") -%>
</body>

<%- include("footer") -%>
